    "version": "0.2.0",
    "configurations": [{
    "name": "Vending:client:Start",
    "type": "node-terminal",
    "request": "launch",
    "command": "npm start",
    "cwd": "${workspaceFolder}/germany/client",
    "internalConsoleOptions": "openOnSessionStart",
    "skipFiles": ["<node_internals>/**", "node_modules/**"],
    "env": { "PORT": 3000, "NODE_ENV": "development" }
  },
  {
    "type": "node",
    "request": "launch",
    "name": "Vending:Server:test:watch",
    "program": "${workspaceFolder}/germany/server/node_modules/.bin/jest",
    "args": [
      "--watchAll",
      // "service.spec.ts",
      // "login.integration.spec.ts"
      // "schema.spec.ts"
      //"utils.spec.ts"
      //"scan.spec.ts"
      //"integration.spec.ts"
      // "build.spec.ts"
      // "file.integration.spec.ts"
      //"protection.integration"
    ],
    "cwd": "${workspaceFolder}/germany/server",
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "disableOptimisticBPs": true,
    "windows": {
      "program": "${workspaceFolder}/germany/server/node_modules/jest/bin/jest"
    }
  },
  {
    "name": "Vending:Server:start",
    "type": "node",
    "request": "launch",
    "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
    "args": ["./server.ts"],
    "cwd": "${workspaceFolder}/germany/server",
    "internalConsoleOptions": "openOnSessionStart",
    "skipFiles": ["<node_internals>/**", "node_modules/**"],
    "env": {
      "NODE_ENV": "development",
      "TS_NODE_PROJECT": "${workspaceFolder}/germany/server/tsconfig.json"
    }
  }]}